<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pratik.compareApp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name="com.udacity.firebase.compareApp.Compare"
        android:allowBackup="true"
        android:icon="@mipmap/ic_shopping_list"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.udacity.firebase.compareApp.ui.MainActivity"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:largeHeap="true"
                android:value="com.udacity.firebase.compareApp.ui.MainActivity" />
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity android:name="com.udacity.firebase.compareApp.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.udacity.firebase.compareApp.ui.login.CreateAccountActivity" />
        <activity android:name="com.udacity.firebase.compareApp.ui.login.ProvideExtraInformationActivity" />
        <activity android:name="com.udacity.firebase.compareApp.ui.login.ContactScanActivity" />
        <activity android:name="com.udacity.firebase.compareApp.ui.login.SetDisplayPictureActivity" />
        <activity android:name="com.udacity.firebase.compareApp.ui.postsList.PostsListActivity"></activity>
    </application>

</manifest>